audon.localhost {
    tls /etc/caddy/certs/cert.pem /etc/caddy/certs/key.pem
    encode zstd gzip
    @backend {
            path /app/* /api/* /storage/* /u/*
    }
    handle @backend {
            reverse_proxy devcontainer:8100 {
                flush_interval -1
            }
    }
    handle {
            reverse_proxy devcontainer:5173 {
                flush_interval -1
            }
    }
}

livekit.localhost {
    tls /etc/caddy/certs/cert.pem /etc/caddy/certs/key.pem
    encode zstd gzip
    reverse_proxy livekit:7880
}
